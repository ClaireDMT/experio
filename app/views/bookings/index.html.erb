  <h1 class="text-center">Your experiences</h1>
  <div class="container-index">
    <div class="container-cards">
      <div class="row">
        <% @bookings.each do |booking| %>

        <div class="col-xs-12 col-sm-6">
          <% if booking.experience.photo.present? %>
          <div class="card" >
            <div class="card__image" style="background-image: url('<%= cl_image_path booking.experience.photo %>');"></div>
            <div class="card__player">
              <div id="player"></div>
            </div>
            <div class="card__info">
              <div class="title-container">
                <h2 class="title fix-bottom"><%= booking.experience.title %></h2>
              </div>
              <p class="genre"><%= booking.experience.category %></p>
              <div class="desc">
                <div class="rating">
                  <p class="meta"><%= booking.experience.category %> ‚óè <%= booking.experience.duration %></p>
                  <div class="stars">
                    <i class="fas fa-star stars"></i>
                    <i class="fas fa-star stars"></i>
                    <i class="fas fa-star stars"></i>
                    <i class="fas fa-star"></i>
                    <i class="fas fa-star-half-alt stars"></i>
                  </div>
                </div>
                <p class="text-autocrop"> <%= booking.experience.description %> </p>
              </div>
              <a class="button-cards" href="/experiences/<%= booking.experience.id %>">Book Now</a>
            </div>
          </div>
          <% end %>
        </div>

        <% end %>
      </div>
    </div>
  </div>


