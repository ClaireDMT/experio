<div class= "container new-form">
<meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="icon" type="image/png" href="images/logo.png"/>
  <link rel="stylesheet" type="text/scss" href="pages/_form_new_experiences.scss">

<%= simple_form_for [@experience] do |f| %>
<div class="container-contact100">
    <div class="wrap-contact100">
      <form class="contact100-form validate-form">
        <span class="contact100-form-title">
          Submit a new experience âœ¨
        </span>
    <div class="label-input100" data-validate="Title is required">
    <%= f.input :title %>
    </div>
    <div validate-input" data-validate = "Description is required" class="label-input100"> <%= f.input :description %>
          <span class="focus-input100"></span>
        </div>
    <div class="label-input100" validate-input">
          <%= f.input :address %>
          <span class="focus-input100"></span>
    </div>
        <div class="label-input100" validate-input">
        <%= f.input :category, collection: [ "Indoor", "Outdoor", "Sports", "Art", "Entertainment"] %>
          <span class="focus-input100"></span>
        </div>
        <div class="label-input100" validate-input">
          <%= f.input :price %>
          <span class="focus-input100"></span>
    </div>
    <div class="label-input100" validate-input">
          <%= f.input :duration %>
          <span class="focus-input100"></span>
    </div>
    <div class="label-input100" validate-input">
          <%= f.input :capacity_min%>
          <span class="focus-input100"></span>
    </div>
        <div class="label-input100" validate-input">
          <%= f.input :validity_date, as: :string, required: false, input_html: {class: "datepicker"} %>
          <span class="focus-input100"></span>
    </div>
    <%= image_tag "", width: 300, class: 'hidden', id: "photo-preview" %>
    <div class="label-input100" validate-input">
          <%= f.input :photo, input_html: { class: 'hidden', id: 'photo-input'}, label_html: { class: 'upload-photo'}, label: 'Upload a photo ðŸ“¸' %>
          <span class="focus-input100"></span>
    </div>
        <span class="label-input100"><%= f.input :photo_cache, as: :hidden %></span>
        <div class="container-contact100-form-btn">
          <div class="wrap-contact100-form-btn">
            <button class="contact100-form-btn">
              <%= f.submit %>
            </button>
          </div>
        </div>
      </form>
    </div>
  </div>
  </div>
<% end %>
